@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<h1 class="text-danger">Hata.</h1>
<h2 class="text-danger">İşleminiz sırasında bir hata oluştu.</h2>

@if (Model?.ShowRequestId ?? false)
{
    <p>
        <strong>İstek ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="alert alert-warning">
    <h3>Neler yapabilirsiniz?</h3>
    <ul>
        <li>Tarayıcınızı yenileyin ve tekrar deneyin.</li>
        <li><a asp-controller="Home" asp-action="Index" class="alert-link">Ana sayfaya dönün</a>.</li>
        <li>Sorun devam ederse sistem yöneticisine başvurun.</li>
    </ul>
</div> 